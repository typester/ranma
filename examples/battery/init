#!/bin/zsh

# Battery status bar plugin for ranma.
#
# Prerequisites:
#   - python3 (macOS built-in)
#   - reap (brew install typester/reap/reap)

# Homebrew PATH (not needed if already set in ~/.zshenv)
export PATH="/opt/homebrew/bin:$PATH"

SCRIPT_DIR="${0:A:h}"

reap --watch $PPID "$SCRIPT_DIR/plugins/battery.py" &
