#!/bin/zsh

# Light minimal status bar plugin for ranma.
#
# Clean, light-themed variant of the unified bar.
# White/gray background with dark text, inspired by native macOS aesthetics.
#
# Prerequisites:
#   - python3 (macOS built-in)
#   - swift (Xcode or CLT)
#   - reap (brew install typester/reap/reap)

# Homebrew PATH (not needed if already set in ~/.zshenv)
export PATH="/opt/homebrew/bin:$PATH"

SCRIPT_DIR="${0:A:h}"

reap --watch $PPID "$SCRIPT_DIR/plugins/unified-light.py" &
