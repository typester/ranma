#!/bin/zsh

# Pastel (Catppuccin Mocha) status bar plugin for ranma.
#
# Soft dark purple background with pastel accent colors.
# Inspired by the Catppuccin Mocha color palette.
#
# Prerequisites:
#   - python3 (macOS built-in)
#   - swift (Xcode or CLT)
#   - reap (brew install typester/reap/reap)

# Homebrew PATH (not needed if already set in ~/.zshenv)
export PATH="/opt/homebrew/bin:$PATH"

SCRIPT_DIR="${0:A:h}"

reap --watch $PPID "$SCRIPT_DIR/plugins/unified-pastel.py" &
