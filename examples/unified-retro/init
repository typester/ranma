#!/bin/zsh

# Retro Terminal status bar plugin for ranma.
#
# Black background with green monospace text.
# Sharp corners, no shadows. Classic terminal/hacker aesthetic.
#
# Prerequisites:
#   - python3 (macOS built-in)
#   - swift (Xcode or CLT)
#   - reap (brew install typester/reap/reap)

# Homebrew PATH (not needed if already set in ~/.zshenv)
export PATH="/opt/homebrew/bin:$PATH"

SCRIPT_DIR="${0:A:h}"

reap --watch $PPID "$SCRIPT_DIR/plugins/unified-retro.py" &
